{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AbbyTerm",
  "version": "0.2.0",
  "identifier": "md.abby.abbyterm",
  "build": {
    "beforeDevCommand": "vite dev",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AbbyTerm",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "fullscreen": false,
        "acceptFirstMouse": true,
        "tabbingIdentifier": "AbbyTerm"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        {
          "identifier": "draggable-window",
          "windows": ["*"],
          "permissions": [
            "core:event:default",
            "core:window:allow-start-dragging",
            "opener:default",
            {
              "identifier": "opener:allow-open-url",
              "allow": [
                {
                  "url": "*"
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
